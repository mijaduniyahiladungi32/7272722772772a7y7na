name: Test unzip and run

on:
  workflow_dispatch:
  schedule:
    - cron: "*/10 * * * *"

jobs:
  test:
    runs-on: ubuntu-latest

    steps:
      - name: ✅ Print start
        run: echo "Workflow started..."

      - name: Checkout
        uses: actions/checkout@v4

      - name: List files
        run: ls -lah

      - name: Unzip file.zip
        run: unzip -P "${{ secrets.ZIP_PASS }}" file.zip || { echo "❌ Unzip failed"; exit 1; }

      - name: List after unzip
        run: ls -lah

      - name: Setup Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.x'

      - name: Install requests
        run: pip install requests

      - name: Run script
        run: python file.py

      - name: Cleanup
        run: rm -f file.py

      - name: ✅ Done
        run: echo "Finished!"
